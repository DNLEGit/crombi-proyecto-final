generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  url = "mysql://root:root@localhost:3306/videoar-db"
}

model User {
  userId     String   @id @unique() @default(uuid())
  name       String
  email      String   @unique
  password   String
  imageUrl   String   @default("")
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  modifiedAt DateTime @default(now())
}
//need to add the imgurl property so the user can add an profile img

enum Role {
  ADMIN
  USER
}

model Product {
  productId   String   @id @unique @default(uuid())
  name        String
  description String   @db.Text
  price       Int
  categoryId  String   @default("")
  image       String   @default("")
  createdAt   DateTime @default(now())
  modifiedAt  DateTime @default(now())
  category    Category @relation(fields: [categoryId], references: [categoryId])

  @@index([categoryId], map: "Product_categoryId_fkey")
}

model Category {
  categoryId String    @id @unique @default(uuid())
  name       String
  categoryImageUrl String @default("")
  products   Product[]
}
